<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
        font-size: 14px;
        margin: 20px;
        line-height: 1.6;
      }

      .report-content {
        margin-top: 30px;
      }

      h1,
      h2 {
        margin-bottom: 20px;
        text-align: left;
        clear: both;
      }

      h1 {
        font-size: 24px;
      }

      h2 {
        font-size: 18px;
        color: #0066cc;
      }

      p {
        font-size: 14px;
        margin-bottom: 10px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
        border: 1px solid #000;
      }

      th,
      td {
        border: 1px solid #000;
        padding: 10px;
        text-align: left;
      }

      th {
        background-color: #f8f8f8;
        font-weight: bold;
      }

      .remarks {
        page-break-inside: avoid;
      }

      .heading {
        padding-top: 35px;
      }

      hr {
        border: 0;
        border-top: 1px solid #ccc;
        margin: 30px 0;
      }
    </style>
  </head>
  <body>
    <div class="report-content">
      <h2 class="heading">General Information</h2>
      <table>
        <tr>
          <th>BMR ID</th>
          <td><%= reportData?.bmr_id %></td>
          <th>Name</th>
          <td><%= reportData?.name %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td><%= reportData?.status %></td>
          <th>Date of Initiation</th>
          <td>
            <%= new
            Date(reportData?.date_of_initiation).toLocaleDateString('en-GB') %>
          </td>
        </tr>
      </table>
      <hr />

      <% reportData.BMR_Tabs.forEach(tab => { %>
      <h2 class="heading"><%= tab.tab_name %></h2>
      <% if (tab.BMR_sections.length > 0) { %> <%
      tab.BMR_sections.forEach(section => { %>
      <h3><%= section.section_name %></h3>
      <% if (section.BMR_fields.length > 0) { %>
      <table>
        <tr>
          <th>Label</th>
          <th>Value</th>
        </tr>
        <% section.BMR_fields.forEach(field => { %>
        <tr>
          <td><%= field.label %></td>
          <td><%= field.defaultValue || 'N/A' %></td>
        </tr>
        <% }) %>
      </table>
      <% } else { %>
      <p>No fields found in this section.</p>
      <% } %> <% }) %> <% } else { %>
      <p>No sections found in this tab.</p>
      <% } %>
      <hr />
      <% }) %>
    </div>
  </body>
</html>
